/* pages/musicopen/musicopen.wxss */
.musicbg{
  display: flex;
  background-color:rgb(128, 150, 150);
  height: 300rpx;
  align-items: center;
  border-radius: 0 0 20rpx 20rpx;
}
.musicbg01{
  width: 35%;
}
.musicbg01 image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 30rpx;
  margin-left: 20rpx;
}
.musicbg02{
  display: flex;
  flex-direction: column;
  height: 200rpx;
}
.titletext01{
  color:white;
  font-size: 35rpx;
  margin-bottom: 20rpx;
}
.musicbg02 image{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.titletext02{
  color:rgb(170, 168, 168);
  font-size: 30rpx;
  display: flex;
  align-items: center;
}
.allplay{
  display: flex;
  flex-direction: row;
  height: 60rpx;
  font-size: 35rpx;
  font-weight: 550;
  align-items: center;
  margin: 20rpx;
}

.alllist{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 10rpx 0;
  height: 90rpx;
 
}
.listitem{
  width: 60rpx;
  height: 60rpx;
  margin-left: 20rpx;
  font-size: 40rpx;
  color: rgb(143, 149, 155);
}
.listtext{
  display: flex;
  flex-grow: 1;
  height: 80rpx;
  align-items: center;
}
.listtext01{
  line-height: 35rpx;
  height: 60rpx;
}
.title01{
  font-size: 35rpx;
}
.title02{
  float: left;
  font-size: 25rpx;
  color: rgb(143, 149, 155);
}
.playimage{
  width: 60rpx;
  height: 60rpx;
  margin-right: 10rpx;
}
