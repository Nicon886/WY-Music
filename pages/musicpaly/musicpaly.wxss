/* pages/musicpaly/musicpaly.wxss */
.item {
  width: 100%;
  height: 100vh;
  padding-bottom: 30rpx;
  display: flex;
  flex-direction: column;
  background-color: rgb(150, 147, 143);
}
.item01{
  height: 10%;
  text-align: center;
}
#item_text1{
  color: white;
  font-size: 40rpx;
}
#item_text2{
  color: rgb(194, 188, 188);
}
.item02{
  height: 70%;
  text-align: center;
}
.audio_progress{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
 
}
.audio_progress slider{
  width: 80%;
}
.audio_progress view{
  padding: 18rpx;
}
.audio_post{
  width: 400rpx;
  height: 400rpx;
  margin: 50rpx auto;
  border-radius: 50%;
}
 
/* 旋转的样式 */
.music_on{
  animation: audio-rotate 8s linear infinite;
}
 
.audio_control{
  display: flex;
  flex-direction: row;
  justify-content:space-around;
}
.audio_control image{
  width: 100rpx;
  height: 100rpx;
}
